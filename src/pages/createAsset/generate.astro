---
import Layout from '../../layouts/Layout.astro';

// This would come from your database in a real implementation
const artAssets = [
  { id: 1, name: "Greymon" },
  { id: 2, name: "MetalGreymon" },
  { id: 3, name: "WarGreymon" },
];
---

<Layout title="Generate 3D Model">
  <div class="create-asset">
    <div class="content">
      <div class="step-counter">2/3</div>

      <div class="form-group">
        <label for="modelName">MODEL NAME</label>
        <input type="text" id="modelName" value="Greymon" class="input-field" />
      </div>

      <div class="upload-section">
        <div class="small-upload">
          <label>SELECT ART ASSET</label>
          <div class="search-box">
            <input type="text" placeholder="Search art assets..." class="search-input" />
            <div class="asset-list">
              {artAssets.map(asset => (
                <div class="asset-item">
                  {asset.name}
                </div>
              ))}
            </div>
          </div>
        </div>

        <div class="preview-area">
          <label>PREVIEW</label>
          <div class="threejs-container">
            <div class="view-toggle">
              <button class="active">2D</button>
              <button>3D</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .create-asset {
    min-height: calc(100vh - var(--header-height));
    color: white;
  }

  .content {
    max-width: 1200px;
    margin: 2rem auto;
    padding: 0 2rem;
  }

  .step-counter {
    font-size: 1.2rem;
    margin-bottom: 2rem;
  }

  .selection-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    margin-top: 2rem;
  }

  .option-card {
    background: #D9D9D9;
    border: 2px solid #000;
    padding: 2rem;
    text-decoration: none;
    color: #000;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    transition: transform 0.2s;
  }

  .option-card:hover {
    transform: translateY(-5px);
  }

  .option-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .option-card h2 {
    margin: 0 0 0.5rem 0;
    font-size: 1.5rem;
  }

  .option-card p {
    margin: 0;
    color: #666;
  }

  .search-box {
    border: 1px solid white;
    background: #000;
    margin-top: 0.5rem;
  }

  .search-input {
    width: 100%;
    padding: 0.5rem;
    background: none;
    border: none;
    color: white;
    border-bottom: 1px solid #333;
  }

  .asset-list {
    max-height: 300px;
    overflow-y: auto;
  }

  .asset-item {
    padding: 0.5rem;
    cursor: pointer;
    border-bottom: 1px solid #333;
  }

  .asset-item:hover {
    background: #333;
  }
</style> 