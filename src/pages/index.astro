---
// Component Imports
import Counter from '../components/Counter';
import ChessGame from '../components/ChessGame';
import '../styles/fonts.css';
import Layout from '../layouts/Layout.astro';

import { signal } from '@preact/signals';

// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/

const count = signal(0);
---

<Layout title="Home">
	<div class="game-container">
		<ChessGame client:only="preact" />
	</div>
</Layout>

<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	body {
		width: 100vw;
		height: 100vh;
		overflow: hidden;
		background: #000;
		color: #D9D9D9;
	}

	.header {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		padding: 20px;
		display: flex;
		justify-content: space-between;
		align-items: center;
		z-index: 1000;
	}

	.logo {
		font-family: 'Bebas Neue', sans-serif;
		-webkit-font-smoothing: antialiased;
		font-size: 2rem;
		color: #D9D9D9;
		display: flex;
		align-items: center;
		gap: 8px;
	}

	.logo-icon {
		width: 24px;
		height: 24px;
	}

	.auth-buttons {
		display: flex;
		align-items: center;
		gap: 8px;
	}

	.auth-button {
		font-family: 'Space Mono', monospace;
		background-color: #D9D9D9;
		color: #000;
		border: none;
		padding: 8px 16px;
		cursor: pointer;
		font-size: 0.9rem;
		position: relative;
	}

	.auth-button:hover::after {
		content: 'Coming soon...';
		position: absolute;
		bottom: -30px;
		left: 50%;
		transform: translateX(-50%);
		background-color: rgba(0, 0, 0, 0.8);
		color: #D9D9D9;
		padding: 4px 8px;
		border-radius: 4px;
		font-size: 0.8rem;
		white-space: nowrap;
		pointer-events: none;
	}

	.divider {
		color: #D9D9D9;
		font-family: 'Space Mono', monospace;
	}

	.game-container {
		width: 100%;
		height: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
		padding: 20px;
	}
</style>
