---
import Layout from '../layouts/Layout.astro';

// This would come from your database in a real implementation
const artAssets = [
  { id: 1, name: "Greymon" },
  { id: 2, name: "MetalGreymon" },
  { id: 3, name: "WarGreymon" },
];
---

<Layout title="Create 3D Model">
  <div class="create-asset">
    <div class="content">
      <div class="step-counter">1/3</div>

      <div class="selection-grid">
        <a href="/createAsset/upload" class="option-card">
          <div class="option-icon">ðŸŽ¨</div>
          <h2>Upload Art Asset</h2>
          <p>Upload your own artwork to create a 3D model</p>
        </a>

        <a href="/createAsset/generate" class="option-card">
          <div class="option-icon">ðŸ”„</div>
          <h2>Generate 3D Model</h2>
          <p>Generate a 3D model from existing artwork</p>
        </a>
      </div>
    </div>
  </div>
</Layout>

<style>
  .create-asset {
    min-height: calc(100vh - var(--header-height));
    color: white;
  }

  .content {
    max-width: 1200px;
    margin: 2rem auto;
    padding: 0 2rem;
  }

  .step-counter {
    font-size: 1.2rem;
    margin-bottom: 2rem;
  }

  .selection-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    margin-top: 2rem;
  }

  .option-card {
    background: #D9D9D9;
    border: 2px solid #000;
    padding: 2rem;
    text-decoration: none;
    color: #000;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    transition: transform 0.2s;
  }

  .option-card:hover {
    transform: translateY(-5px);
  }

  .option-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .option-card h2 {
    margin: 0 0 0.5rem 0;
    font-size: 1.5rem;
  }

  .option-card p {
    margin: 0;
    color: #666;
  }
</style> 