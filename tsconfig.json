{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "types": [
      "three",
      "@webgpu/types"
    ],
    "paths": {
      // Pure React now - no Preact aliases
    }
  },
  "include": [
    "src",
    "vite.config.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
